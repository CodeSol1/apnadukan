<hr>
<section class="container" id="cartid">

<% if(session.cart) {%>
    <div class="order  mx-auto d-flex">
        <div class="summary mt-2">
            <img src="/img/main-cart.jpg" height="40px" width="40px" alt="">
            <h2 class="ml-2 ">Order Cart</h2>
        </div>
    </div>
    <hr>
    <div class="summary-head">
           <div class="pizza_list ">

        <!-- object ko array me convert kiya -->
        <% for(let burger of Object.values(session.cart.items)) { %>
          
            <div class="mt-2 pizzabar">
                <div class="pizza-image">
                    <img src="/img/<%= burger.item.image %>" height="100px" width="100px" alt="">
                    <div class="ml-2">
                        <div class="my-2">
                            <%= burger.item.name %>
                        </div>
            
            
                        <div>
                            <%= burger.item.size%>
                        </div>
            
            
                    </div>
                </div>

                <div class="pizza-size">
                   
                    <span >
                        <%= burger.qty %>Pcs
                    </span>
                  
                </div>

                <div class="pizza-price">
                    <span >Rs <%= burger.item.price*burger.qty %></span>
                </div>
                     
               
                
            </div>
            <% } %>
    </div>
    </div>
<hr>
    <div class="right">
        <div>
            <span>Total Amount :</span>
            <span class="font-weight-bold text-danger">Rs <%= session.cart.totalPrice%></span>
        </div>


        
        <div>
            <% if(user){ %>
            <form action="/orders" method="POST">
                <div class="mt-3">
                    <input type="text" name="address" id="" placeholder="Address...">
                </div>

               <div class="mt-2">
                    <input type="number" name="phone" id="" placeholder="Mobile No...">
                </div>
                <div class="final_ordr1">
                    <button type="submit" class=" final_order  mt-2">Order Now</button>
                </div>
            </form>
            <% } else{ %>


            <div class="login-btn1">
                <a href="/login">Login To Continue</a>
            </div>

             <% } %>
        </div>

    </div>


<%} else {%>
<div class="container text-center mx-auto">
        <h3>Empty Cart</h3>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing </p>
        <img src="/img/empty-cart.jpg" width="50%" height="40%" alt="">

        <div class="go_back">
            <a href="/">Go Back</a>
        </div>
    </div>


    <% } %>

</section>
<hr>