<div class="register-page ">


    <div class="register1">
        <div class="register2">
            <H2>Register Here</H2>
        </div>
        <hr>


        <div class="register-bar">
            <form action="/register" method="POST">

                <% if(messages.error) { %>
                    </span>
                    <%= messages.error %></span>
                        <% } %>

                            <div class="form-group">
                                <label for="exampleInputEmail1">username</label>
                                <input type="text" class="form-control" name="name" value="<%= messages.name%>"
                                    id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username">

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" name="email" value="<%= messages.email%>"
                                    id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" name="password" id="exampleInputPassword1"
                                    placeholder="Password">
                            </div>

                            <button type="submit" class="btn btn-primary">Register</button>
                            <span class="already-account"><a href="/login">Already Account?</a></span>
            </form>
        </div>
    </div>
</div>